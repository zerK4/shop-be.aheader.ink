generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String    @id @default(cuid())
  email     String
  firstName String
  lastName  String
  sid       String    @unique
  role      UserRole? @default(USER)
}

enum UserRole {
  ADMIN
  ORGANIZER
  USER
}

model CoreConfigData {
  id       String  @id @default(cuid())
  name     String  @unique
  protocol String?
  base     String?
  url      String?
  path     String?
  value    String?
  redirect String?
}

model Product {
  id          String @id @default(cuid())
  name        String
  description String
  price       String
  attributes  String
  categories  String
}

model Attribute {
  id    String @id @default(cuid())
  name  String
  value String
}
